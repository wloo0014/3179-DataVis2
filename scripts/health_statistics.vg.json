{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"title": "Different health statistics for different countries",
	"width": 1000,
	"height": 600,
	"data": {
		"url": "https://raw.githubusercontent.com/wloo0014/3179-DataVis2/main/data/life_expectancy_ASEAN_cleaned.csv",
		"format": {
			"type": "csv",
			"parse": {
				"Year": "number",
				"Population": "number",
				"Measles": "number",
				"Polio": "number",
				"Total_expenditure": "number",
				"GDP": "number",
				"BMI": "number",
				"Schooling": "number",
				"Life expectancy": "number"
			}
		}
	},
	"params": [
		{
			"name": "param_year",
			"value": 2000,
			"bind": {
				"input": "range", "min": 2000, "max": 2015, "step": 1,
				"name": "Year: "
			}
		}
	],
	"transform": [
		
		{"filter": "datum['Measles']"},
		{"window": [{"op": "count", "as": "index"}]},
		{"fold": ["Measles", "Polio", "Infant deaths", "Under-five deaths", "Thinness", "Schooling"]},
		{
			"calculate": "parseInt(datum.value)", "as": "value2"
		},
		{
			"joinaggregate": [
			  	{"op": "min", "field": "value2", "as": "min"},
			  	{"op": "max", "field": "value2", "as": "max"}
			],
			"groupby": ["key"]
		},
		{
			"calculate": "(datum.value2 - datum.min) / (datum.max - datum.min)",
			"as": "norm_val"
		},
		{
			"calculate": "(datum.min + datum.max) / 2",
			"as": "mid"
		},
		{"filter": "datum.Year == param_year"}
	],
	"layer": [
		{
			"mark": {
				"type": "rule",
				"color": "#ccc"
			},
			"encoding": {
				"detail": {"aggregate": "count"},
				"x": {"field": "key"}
			}
		},
		{
			"mark": "line",
			"encoding": {
				"color": {"type": "nominal", "field": "Country"},
				"detail": {"type": "nominal", "field": "index"},
				"opacity": {"value": 0.3},
				"x": {"type": "nominal", "field": "key"},
				"y": {"type": "quantitative", "field": "norm_val", "axis": null},
				"tooltip": [
					{
						"type": "nominal",
						"field": "Country"
					},
					{
						"type": "quantitative",
						"field": "Year"
					},
					{
						"type": "quantitative",
						"field": "Measles"
					}, 
					{
						"type": "quantitative",
						"field": "Polio"
					}, 
					{
						"type": "quantitative",
						"field": "Infant deaths"
					}, 
					{
						"type": "quantitative",
						"field": "Under-five deaths"
					},
					{
						"type": "quantitative",
						"field": "Thinness"
					},
					{
						"type": "quantitative",
						"field": "Schooling"
					}
				]
			}
		},
		{
			"encoding": {
				"x": {"type": "nominal", "field": "key"},
				"y": {"value": 0}
			},
			"layer": [
				{
					"mark": {"type": "text", "style": "label"},
					"encoding": {
						"text": {"aggregate": "max", "field": "max"}
					}
				},
				{
					"mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
				}
			]
		},
		{
			"encoding": {
				"x": {"type": "nominal", "field": "key"},
				"y": {"value": 300}
			},
			"layer": [
				{
					"mark": {"type": "text", "style": "label"},
					"encoding": {
						"text": {"aggregate": "min", "field": "mid"}
					}
				},
				{
					"mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
				}
			]
		},
		{
			"encoding": {
				"x": {"type": "nominal", "field": "key"},
				"y": {"value": 600}
			},
			"layer": [
				{
					"mark": {"type": "text", "style": "label"},
					"encoding": {
						"text": {"aggregate": "min", "field": "min"}
					}
				}, 
				{
					"mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
				}
			]
		}
	],
	"config": {
		"axisX": {"domain": false, "labelAngle": 0, "tickColor": "#ccc", "title": null},
		"view": {"stroke": null},
		"style": {
		  	"label": {"baseline": "middle", "align": "right", "dx": -5},
		  	"tick": {"orient": "horizontal"}
		}
	}
}