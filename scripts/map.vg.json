{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"title": {
		"text": "South East Asia Average Life Expectancy (2000-2015)",
		"fontSize": 20,
		"anchor": "middle"
	},
	"width": 800,
	"height": 500,
	"projection": {"type": "mercator"},
	"data": {
		"url": "https://raw.githubusercontent.com/wloo0014/3179-DataVis2/main/data/life_expectancy_ASEAN_cleaned.csv",
		"format": {
			"type": "csv",
			"parse": {
				"Year": "number",
				"Population": "number",
				"Measles": "number",
				"Polio": "number",
				"Total_expenditure": "number",
				"GDP": "number",
				"BMI": "number",
				"Schooling": "number",
				"Life expectancy": "number"
			}
		}
	},
	"params": [
		{
			"name": "param_year",
			"value": 2000,
			"bind": {
				"input": "range", "min": 2000, "max": 2015, "step": 1,
				"name": "Year: "
			}
		}
	],
	"transform": [
		{
			"calculate": "round(datum.GDP)", "as": "roundedGDP"
		},
		{
			"filter": "datum.Year == param_year"
		},
		{
			"lookup": "Country",
			"from": {
				"data": {
					"url": "https://raw.githubusercontent.com/wloo0014/3179-DataVis2/main/data/asean.topojson",
					"format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
				},
				"key": "properties.NAME",
				"fields": ["type", "geometry"]
			}
		}
	],
	"mark": {"type": "geoshape"},
	"encoding": {
		"color": {
			"field": "Life expectancy",
		  	"type": "quantitative",
		  	"scale": {
				"type": "threshold",
				"domain": [60, 65, 70, 75]
			},
			"title": "Life Expectancy (Years)",
			"legend": {
				"orient": "left",
				"offset": -150
			}
		},
		"tooltip": [
			{"field": "Country", "type": "nominal", "title": "Country"},
      		{"field": "Life expectancy", "type": "quantitative", "title": "Life Expectancy (Years)"},
			{"field": "BMI", "type": "quantitative", "title": "BMI"},
			{"field": "roundedGDP", "type": "quantitative", "format": ",", "title": "GDP per capita ($USD)"}
		]
	},
	"config": {
		"autosize": "fit",
		"padding": 0
	}
}